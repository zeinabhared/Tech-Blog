<article>
  <a href="/dashboard" class="is-pulled-right"> &larr; Back to Dashboard</a>
    <h2 class="title mt-5">edit post</h2><hr>
        <form class="edit-post-form">
            <div>
                <label for="title">Title:</label>
                <input class="input" name="title" type="text" value="{{title}}" />
            </div>
            <div>
                <label for="content">Content:</label>
                <input class="textarea" name="content" type="text" value="{{post.content}}" />
            </div>
            <div class="is-pulled-right">
                Created by you on {{format_date post.created_at}}
                |
                <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
            </div>
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-primary delete-post-btn">Delete</button>
        </form>
</article>

{{> comments post.comments}}

<script src="/js/editPost.js"></script>
<script src="/js/deletePost.js"></script>
<script src="/js/comment.js"></script>