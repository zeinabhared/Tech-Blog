<h3 class="mb-4">Create an account.</h3><hr>
    <form class="signup-form">
        <div>
            <label for="username-signup">Username:</label>
            <input type="text" id="username-signup">
        </div>
        <div class="form-group">
            <label for="email-signup">Email:</label>
            <input type="text" id="email-signup">
        </div>
        <div class="form-group">
            <label for="twitter-signup">Twitter:</label>
            <input type="text" id="twitter-signup">
        </div>
        <div class="form-group">
            <label for="github-signup">Github:</label>
            <input type="text" id="github-signup">
        </div>
        <div class="form-group">
            <label for="password-signup">Password:</label>
            <input type="password" id="password-signup">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
        <p class="py-3">Already have an account? <a class="font-weight-bold" href="/login">Login here.</a></p>
    </form>

<script src="/js/signup.js"></script>