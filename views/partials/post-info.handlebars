<div class="container-fluid">
        <div class="card">
            <div class="card-header"> 
            <a href="/post/{{id}}"  class="text-start">{{title}} </a>
            </div>
                <div class="card-body">
                    <p class="card-text">
                         {{content}}
                    </p>
   
                    <p class="card-text">
                        {{user.username}} | 
                        {{format_date created_at}} | <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
                    </p>
                </div>
        </div>
</div>