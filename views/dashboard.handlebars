<div>
   <h2 class="title pb-4">Dashboard: Your Posts</h2><hr>

    <a href="/dashboard/create">
    <button id="create-post" class="btn btn-dark">Create Post</button></a><hr> 
    {{#if posts.length}}
</div>

<div>
{{#each posts as |post|}}
{{> post-info post}}
    <a href="/dashboard/edit/{{post.id}}">
    <button class="button mb-5 ml-5 is-warning">Edit</button></a>
{{/each}}

{{else}}
    <h6 class="pb-4 has-text-centered is-italic">You do not currently have any posts right now.</h6>
{{/if}}
</div>